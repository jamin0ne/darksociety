<% include ./partials/header.ejs %>
<div class="container">
<h1>Vali's Blogs</hi>

    <h4>
        <%= typeof msg != 'undefined' ? msg: '' %>
    </h4>

    <% Allblogs.forEach((i)=>{ %>
      <br>
    <div class="container">
        <h3 class="text-uppercase"> <%= i.title %> </h3>
        <img class="img img-thumbnail" src="<%= i.image %>">
        <div>
            <span class="font-weight-bold"><%= i.created.toDateString() %></span>
            <a><%- i.body.slice(0,150) %>...</a>
            <a href="/blogs/<%= i._id %>">Read more</a>
        </div>
    </div>
    <br>
    <hr>
        <% }) %>
    
</div>
    <% include ./partials/footer.ejs %>